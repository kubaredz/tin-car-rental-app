<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Edytuj wynajem</h2>
            <form class="form">
                <label for="rentId">Id wynajmu: <span class="symbol-required">*</span></label>
                <input type="number" name="rentId" id="rentId" value="1" readonly />
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <label for="carId">Id samochodu: <span class="symbol-required">*</span></label>
                <select name="carId" id="carId">
                    <option value="1" title="Bmw 118i, WE2N303" selected>1</option>
                    <option value="2" title="Audi s3, WA756AA">2</option>
                    <option value="3" title="Alfa Romeo Giulia Quadrifoglio, WB757E3">3</option>  
                </select>
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <label for="clientId">Id klienta: <span class="symbol-required">*</span></label>
                <select name="clientId" id="clientId">
                    <option value="1" title="Jakub Redziński, 524151" selected>1</option>
                    <option value="2" title="Piotr Nowak, 524152">2</option>
                    <option value="3" title="Aleksandra Nowak, 524153">3</option>
                </select>
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <label for="rentPrice">Cena wynajmu: <span class="symbol-required">*</span></label>
                <input type="number" name="rentPrice" id="rentPrice" value="400" required />
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <label for="dateFrom">Data rozpoczęcia najmu: <span class="symbol-required">*</span></label>
                <input type="date" name="dateFrom" id="dateFrom" value="2021-11-02" required />
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <label for="dateTo">Data zakończenia najmu: </label>
                <input type="date" name="dateTo" id="dateTo" value="2021-11-03" required />
                <span id="errorText" class="errors-text">To pole jest wymagane</span>

                <div>
                    <a href="statement/rent-list-success-edit.html" class="button-add2">Edytuj</a>
                    <a href="rent-list.html" class="button-cancel">Anuluj</a>
                </div>
            </form>
        </main>
<%- include('../../fragments/footer.ejs') %>